@model IEnumerable<BulkyBook.Models.Category>
@{
    ViewData["Title"] = "Index";
}


<div class="Container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary">
                Create New Category
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">
                    @item.Name
                </td>
                <td width="20%">
                    @item.DisplayOrder
                </td>
                <td class="text-end">
                    <div class="w-50 btn-group text-end" role="group">
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary mx-2">Edit</a>
                    </div>
                </td>
                <td class="text-end">
                    <div class="w-50 btn-group text-end" role="group">
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>